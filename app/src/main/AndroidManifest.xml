<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera.any" android:required="true" />
    <queries>
        <package android:name="com.spotify.music" />
        <package android:name="com.spotify.lite" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="spotify" />
        </intent>
    </queries>

    <application
        android:label="GITSTER"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.GITSTER" android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.GITSTER">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="gitster"
                    android:host="callback" />
            </intent-filter>
        </activity>

    </application>
</manifest>
